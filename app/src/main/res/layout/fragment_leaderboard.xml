<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trinity.isabelle.fitami.Fragments.LeaderboardFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:id="@+id/layoutRank"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/textUserRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:text="My Rank:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/editUserRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignRight="@+id/textUserRank"
                android:text="1"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutData"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@+id/layoutRank"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/txtUserData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="My Points:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/editUserData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignRight="@+id/txtUserData"
                android:text="50"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/layoutData"
            android:background="#000" />

        <Spinner
            android:id="@+id/leaderboardSpinner"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/layoutData"
            android:layout_marginTop="5dp"
            android:entries="@array/leaderboard_array" />

        <ListView
            android:id="@+id/leaderboardListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/leaderboardSpinner" />

    </RelativeLayout>

</FrameLayout>
