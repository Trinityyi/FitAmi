<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trinity.isabelle.fitami.Fragments.TrophyFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <TextView
            android:id="@+id/stepsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Daily Steps"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/stepsMedals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stepsTV"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/steps25000"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_gravity="end"
                android:layout_weight="0.25"
                android:background="@mipmap/medal_gray1">

                <TextView
                    android:id="@+id/steps25000text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="25k steps"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/steps20000"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_gravity="end"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.25"
                android:background="@mipmap/medal_gray1">

                <TextView
                    android:id="@+id/steps20000text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="20k steps"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/steps10000"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_gravity="end"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.25"
                android:background="@mipmap/medal_gray1">

                <TextView
                    android:id="@+id/steps10000text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="10k steps"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/steps5000"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_gravity="end"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.25"
                android:background="@mipmap/medal_gray1">

                <TextView
                    android:id="@+id/steps5000text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="5k steps"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/stepsMedals"
            android:background="#000" />

        <TextView
            android:id="@+id/distanceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stepsMedals"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Daily Distance"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/distanceMedals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distanceTV"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/distance25000"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="0.25"
                android:background="@mipmap/medal_gray1">

                <TextView
                    android:id="@+id/distance25000text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="25 km"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/distance20000"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.25"
                android:background="@mipmap/medal_gray1">

                <TextView
                    android:id="@+id/distance20000text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="20 km"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/distance10000"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.25"
                android:background="@mipmap/medal_gray1">

                <TextView
                    android:id="@+id/distance10000text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="10 km"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/distance5000"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.25"
                android:background="@mipmap/medal_gray1">

                <TextView
                    android:id="@+id/distance5000text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="5 km"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/distanceMedals"
            android:background="#000" />

        <TextView
            android:id="@+id/timeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distanceMedals"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Daily Active Time"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/timeMedals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeTV"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/time120"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="0.25"
                android:background="@mipmap/medal_gray1">

                <TextView
                    android:id="@+id/time120text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="120 minutes"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/time90"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.25"
                android:background="@mipmap/medal_gray1">

                <TextView
                    android:id="@+id/time90text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="90 minutes"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/time60"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.25"
                android:background="@mipmap/medal_gray1">

                <TextView
                    android:id="@+id/time60text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="false"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="60 minutes"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/time30"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.25"
                android:background="@mipmap/medal_gray1">

                <TextView
                    android:id="@+id/time30text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="30 minutes"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
