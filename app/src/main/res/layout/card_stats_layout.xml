<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <RelativeLayout
            android:id="@+id/stepsLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:background="@mipmap/icons8_shoes_48">

            <TextView
                android:id="@+id/stepsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stepsBar"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:text="5000 steps" />

            <ProgressBar
                android:id="@+id/stepsBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/circular"
                android:indeterminate="false"
                android:max="10000"
                android:progress="5000"
                android:progressDrawable="@drawable/circular_progress" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/distanceLayout"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:background="@mipmap/ic_location_on_black_48dp">

            <TextView
                android:id="@+id/distanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/distanceBar"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:text="5.30 km" />

            <ProgressBar
                android:id="@+id/distanceBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="85dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:background="@drawable/circular"
                android:indeterminate="false"
                android:max="8"
                android:progress="5"
                android:progressDrawable="@drawable/circular_progress" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/timeLayout"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_flash_on_black_48dp">

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeBar"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:text="1:00 hours" />

            <ProgressBar
                android:id="@+id/timeBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="85dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="false"
                android:background="@drawable/circular"
                android:indeterminate="false"
                android:max="90"
                android:progress="60"
                android:progressDrawable="@drawable/circular_progress" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>